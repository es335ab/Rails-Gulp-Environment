/*
 * flex
 */

.modFlex
  display: table
  table-layout: fixed
  border-collapse: collapse
  width: 100%
  box-sizing: border-box
  > div,
  > p,
  > ul
    display: table-cell
    vertical-align: middle

  .modFlexCell
    vertical-align: top

  .modFlexCellIcon64
    width: 72px;

  .modFlexCellIcon50
    width: 58px
    img
      width: 50px
      height: 50px
      display: block

  .modFlexCellIcon24
    width: 32px

  .modFlexCellRank
    width: 25px
    text-align: center
    padding-right: 7px;

  .modFlexCellCaret
    vertical-align: middle
    text-align: right
    width: 18px

  .modFlexCellHalf
    vertical-align: middle
    width: 50%